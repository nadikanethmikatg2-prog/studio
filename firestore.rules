rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // A user can read and write to their own document in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // A user can also read and write to the dailyLogs subcollection within their own document.
      match /dailyLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
